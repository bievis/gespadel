<h1>Edici√≥n del Partido</h1>

<% form_for(@match) do |f| %>
  <%= f.error_messages %>

  <p>Fecha del Partido <br />
    <td> <%= f.date_select :fecha %> </td>
  </p>

  <p>Pareja 1 <br />
    <td><%= select("match", "id_par1", 
                      Pair.find(:all).collect {|x| [ Player.find_all_by_id_par(x.id).collect{ |p| p.name + " " }.join(" - "), x.id ]}) %>
    </td>
  </p>

  <p>Pareja 2 <br />
    <td><%= select("match", "id_par2",
                      Pair.find(:all).collect {|x| [ Player.find_all_by_id_par(x.id).collect{ |p| p.name + " " }.join(" - "), x.id ]}) %>
    </td>
  </p>

  <p>
    <table>
        <th align="center"> Set 1 </th>
        <th align="center"> Set 2 </th>
        <th align="center"> Set 3 </th>
      <tr align="center">
        <td> <%= select("match", "set1_par1", (0..12).to_a.map { |m| ["#{m}", m] }, :selected => :set1_par1.to_s, :include_blank => false) %> </td>
        <td> <%= select("match", "set2_par1", (0..12).to_a.map { |m| ["#{m}", m] }, :selected => :set2_par1.to_s, :include_blank => false) %> </td>
        <td> <%= select("match", "set3_par1", (0..12).to_a.map { |m| ["#{m}", m] }, :selected => :set3_par1.to_s, :include_blank => false) %> </td>
      </tr>
      <tr align="center">
        <td> <%= select("match", "set1_par2", (0..12).to_a.map { |m| ["#{m}", m] }, :selected => :set1_par2.to_s, :include_blank => false) %> </td>
        <td> <%= select("match", "set2_par2", (0..12).to_a.map { |m| ["#{m}", m] }, :selected => :set2_par2.to_s, :include_blank => false) %> </td>
        <td> <%= select("match", "set3_par2", (0..12).to_a.map { |m| ["#{m}", m] }, :selected => :set3_par2.to_s, :include_blank => false) %> </td>
      </tr>
    </table>
  </p>

  <p>Observaciones<br />
    <%= f.text_area :observaciones %>
  </p>

  <p>
    <%= f.submit "Actualizar" %>
  </p>
<% end %>

<%= link_to 'Mostrar', @match %> |
<%= link_to 'Volver', matches_path %>
